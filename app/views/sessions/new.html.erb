<div id="container">

    <h1> Secrets </h1>

    <h2> Login into Your Account </h2>

    
    <p class ="err"> <%= flash[:errors] %>
   

    <form action="/sessions/create" method='post'>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p class="categ">Email:</p>
        <p><input class="input" type="text" name="email"></p>
        <p class="categ">Password:</p>
            <p><input class="input" type="password" name="password"></p>    
        <p><input type="submit" class="btn" value="Login"></p>
    </form>

</div>