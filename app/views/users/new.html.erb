<div id="container">
    <h1> Secrets </h1>

    <h2> Create a New Account </h2>

    <% if flash[:errors] %>
            <ul class= "err">
  	            <% flash[:errors].each do |e| %>
    	            <li><%= e %></li>
                <% end %>
             </ul>       
    <% end %>

    <form action = "/users/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p class="categ">Name:</p>
        <p><input class="input" type="text" name="name"></p>
        <p class="categ">Email:</p>
        <p><input class="input" type="text" name="email"></p>
        <p class="categ">Password:</p>
        <p><input class="input" type="password" name="password"></p>  
        <p class="categ">Password Confirmation:</p>
        <p><input class="input" type="password" name="password_confirmation"></p>       
        <p><input type="submit" class="btn" value="Join"></p>
    </form>

</div>