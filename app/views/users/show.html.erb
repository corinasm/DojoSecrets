<div id="container">

    <h2>Welcome, <%= @current_user.name %></h2>
    
    <a href='/secrets'>All Secrets </a>
    <h3>My New Secret</h3>

    <form action = "/secrets/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p class="categ">New Secret:</p>
        <p><textarea class="txtar" name="content"></textarea></p>      
        <p><input type="submit" class="btn" value="Create Secret"></p>
    </form>


    <h3>My Secrets</h3>
        <table>
            <tbody>
                <% @my_secrets.each do |secret| %>
                    <tr>
                        <td> <%= secret.content %> </td>
                        <td> <a class="btn_del" href="/secrets/<%= secret.id %>/destroy">Delete</a></td>
                    </tr>
                <% end %>
            </tbody>        
        </table>  

    <h3>Liked Secrets</h3>  
        <table>
            <tbody>
                 <% @my_liked_secrets.each do |my_liked_secret| %>
                    <tr>
                        <% if my_liked_secret[:secret_liked] %>
                            <td> <%= my_liked_secret[:secret_liked].content %> </td>
                            <td> <%= my_liked_secret[:likes_count] %> </td>
                        <% end %>    
                    </tr>
                <% end %>
            </tbody>        
        </table>  
    


</div>   
